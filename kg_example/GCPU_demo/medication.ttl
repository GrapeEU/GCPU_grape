@prefix exmed: <http://example.org/medication/> .
@prefix excond: <http://example.org/condition/> .
@prefix exdrug: <http://example.org/drug/> .
@prefix excommon: <http://example.org/common/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# --- Classe Médicament ---
exmed:Medication rdf:type owl:Class ;
    rdfs:label "Medication" .

# --- Propriétés ---
exmed:indicatedFor rdf:type owl:ObjectProperty ;
    rdfs:label "is indicated for" .

exmed:hasActiveSubstance rdf:type owl:ObjectProperty ;
    rdfs:label "has active substance" .

exmed:contraindicatedFor rdf:type owl:ObjectProperty ;
    rdfs:label "is contraindicated for" .

exmed:hasSideEffect rdf:type owl:ObjectProperty ;
    rdfs:label "has side effect" .

exmed:hasInteractionWith rdf:type owl:ObjectProperty ;
    rdfs:label "interacts with" .

exmed:hasTherapeuticClass rdf:type owl:ObjectProperty ;
    rdfs:label "belongs to therapeutic class" .

exmed:hasDosageForm rdf:type owl:DatatypeProperty ;
    rdfs:label "dosage form" .

exmed:hasATCCode rdf:type owl:DatatypeProperty ;
    rdfs:label "ATC code" .

exmed:hasStandardDosage rdf:type owl:DatatypeProperty ;
    rdfs:label "standard dosage" .

# --- RÈGLE D'INFÉRENCE ---
exmed:contraindicatedFor owl:propertyChainAxiom (
    exmed:hasActiveSubstance
    exdrug:contraindicatedFor
) .

exmed:hasSideEffect owl:propertyChainAxiom (
    exmed:hasActiveSubstance
    exdrug:causesSymptom
) .


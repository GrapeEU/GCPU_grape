@prefix expat: <http://example.org/patient/> .
@prefix excond: <http://example.org/condition/> .
@prefix exmed: <http://example.org/medication/> .
@prefix excommon: <http://example.org/common/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# --- Classe Patient ---
expat:Patient rdf:type owl:Class ;
    rdfs:label "Patient Record" .

# --- Propriétés du Patient ---
expat:hasCondition rdf:type owl:ObjectProperty ;
    rdfs:label "has diagnosed condition" .

expat:hasProcedure rdf:type owl:ObjectProperty ;
    rdfs:label "has past procedure" .

expat:hasSymptom rdf:type owl:ObjectProperty ;
    rdfs:label "is currently experiencing" .

expat:takesMedication rdf:type owl:ObjectProperty ;
    rdfs:label "is currently taking" .

expat:hasAllergy rdf:type owl:ObjectProperty ;
    rdfs:label "has allergy to" .

expat:hasVitalSign rdf:type owl:ObjectProperty ;
    rdfs:label "has vital sign" .

expat:hasLabResult rdf:type owl:ObjectProperty ;
    rdfs:label "has laboratory result" .

expat:hasFamilyHistory rdf:type owl:ObjectProperty ;
    rdfs:label "has family history of" .

expat:hasAge rdf:type owl:DatatypeProperty ;
    rdfs:label "age" .

expat:hasGender rdf:type owl:DatatypeProperty ;
    rdfs:label "gender" .

expat:hasBloodType rdf:type owl:DatatypeProperty ;
    rdfs:label "blood type" .

expat:hasBMI rdf:type owl:DatatypeProperty ;
    rdfs:label "BMI" .

